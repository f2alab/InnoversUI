<UserControl x:Class="InnoversUI.Child"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InnoversUI" xmlns:controls="clr-namespace:InnoversUI.Controls"
             mc:Ignorable="d">
    <Border Background="White" CornerRadius="20" MinHeight="100" MinWidth="200" MaxWidth="600" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border x:Name="BtnBorder" Background="LightBlue" Grid.Row="1" CornerRadius="0 0 20 20" Padding="5">
                <controls:InnoButton x:Name="OkBtn" Content="OK" Height="25" HorizontalAlignment="Right" Margin="20 0" Click="OkBtn_Click"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
