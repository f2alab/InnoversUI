<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="ActivateColor">#FF2196F3</Color>
    <Color x:Key="DesactivateColor">#FFCCCCCC</Color>

    <Thickness x:Key="ActivateMargin">20,0,0,0</Thickness>
    <Thickness x:Key="DesactivateMargin">2,0,0,0</Thickness>
    <Style x:Key="CustomCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid Width="40" Height="20">
                        <Border x:Name="MainBorder"
                            CornerRadius="10"
                            BorderThickness="2">
                            <Border.BorderBrush>
                                <SolidColorBrush Color="{StaticResource DesactivateColor}"/>
                            </Border.BorderBrush>
                            <Border.Background>
                                <SolidColorBrush Color="Transparent"/>
                            </Border.Background>
                        </Border>

                        <Border x:Name="Circle"
                            Width="16"
                            Height="16"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            CornerRadius="8"
                            Margin="{StaticResource DesactivateMargin}">
                            <Border.Background>
                                <SolidColorBrush Color="Gray"/>
                            </Border.Background>
                        </Border>
                    </Grid>

                    <!-- Triggers -->
                    <ControlTemplate.Triggers>
                        <!-- Curseur main au survol -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Cursor" Value="Hand"/>
                        </Trigger>

                        <!-- Valeurs statiques si coché (hors animation, fallback) -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="MainBorder" Property="BorderBrush">
                                <Setter.Value>
                                    <SolidColorBrush Color="{StaticResource ActivateColor}"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="Circle" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{StaticResource ActivateColor}"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <!-- Animation au Checked -->
                        <EventTrigger RoutedEvent="CheckBox.Checked">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="MainBorder"
                                                Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                To="{StaticResource ActivateColor}"
                                                Duration="0:0:0.3"/>

                                    <ColorAnimation Storyboard.TargetName="Circle"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="Blue"
                                                Duration="0:0:0.3"/>

                                    <ThicknessAnimation Storyboard.TargetName="Circle"
                                                    Storyboard.TargetProperty="Margin"
                                                    To="{StaticResource ActivateMargin}"
                                                    Duration="0:0:0.3"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <!-- Animation au Unchecked -->
                        <EventTrigger RoutedEvent="CheckBox.Unchecked">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="MainBorder"
                                                Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                To="{StaticResource DesactivateColor}"
                                                Duration="0:0:0.3"/>

                                    <ColorAnimation Storyboard.TargetName="Circle"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="Gray"
                                                Duration="0:0:0.3"/>

                                    <ThicknessAnimation Storyboard.TargetName="Circle"
                                                    Storyboard.TargetProperty="Margin"
                                                    To="{StaticResource DesactivateMargin}"
                                                    Duration="0:0:0.3"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>