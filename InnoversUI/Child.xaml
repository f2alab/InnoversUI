<UserControl x:Class="InnoversUI.Child"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InnoversUI" xmlns:controls="clr-namespace:InnoversUI.Controls"
             mc:Ignorable="d" 
             MinHeight="350" MinWidth="600">
    <Border Background="White" CornerRadius="20" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="90"/>
            </Grid.RowDefinitions>

            <Border x:Name="BtnBorder" Background="LightBlue" Grid.Row="1" CornerRadius="0 0 20 20">
                <controls:InnoButton x:Name="OkBtn" Content="OK"  Width="100" HorizontalAlignment="Right" Margin="20 0" Click="OkBtn_Click"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
