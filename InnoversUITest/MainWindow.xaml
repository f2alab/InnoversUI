<Window x:Class="InnoversUITest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InnoversUITest" xmlns:customs="clr-namespace:InnoversUI;assembly=InnoversUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        KeyDown="Window_KeyDown">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel >
            <customs:CircleProgressBar IsLoading="True" Size="50" ProgressColor="Red"/>
            <Border Height="10" />
            <customs:TextField x:Name="TF" HintText="TextField" Text="" PreviewTextInput="TextField_PreviewTextInput" TextChanged="TextField_TextChanged"/>
            <Border Height="10" />
            <customs:IconTextField HintText="IconTextField" Text="" Height="35" BorderThickness="6"/>
        </StackPanel>
    </Grid>
</Window>
