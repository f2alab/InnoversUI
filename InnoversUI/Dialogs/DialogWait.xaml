<Window x:Class="InnoversUI.Dialogs.DialogWait"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InnoversUI.Dialogs" 
        xmlns:innoversui="clr-namespace:InnoversUI.Controls"
        mc:Ignorable="d"
        Title="DialogWait" Height="450" Width="800"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown"
        KeyDown="Window_KeyDown">
    <Grid Background="#7F000000">
        <Border CornerRadius="8" BorderThickness="0" Background="White" Height="90" Width="90">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <innoversui:CircleProgressBar Size="50" />
                <TextBlock x:Name="MessageTextBlock" Text="Initialisation..." TextWrapping="Wrap" TextAlignment="Center"  FontSize="11" FontWeight="DemiBold" HorizontalAlignment="Center" Margin="5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
