<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:system="clr-namespace:System;assembly=mscorlib">

    <SolidColorBrush x:Key="HeaderColor">DarkCyan</SolidColorBrush>
    <SolidColorBrush x:Key="HeaderMouseOverColor">#FF117B7B</SolidColorBrush>
    
    <Style TargetType="DataGridColumnHeader">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
        <Setter Property="Background" Value="{StaticResource HeaderColor}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DataGridColumnHeader}">
                    <ControlTemplate.Resources>
                        <Geometry x:Key="AscendingArrow">M7.03 9.97H11.03V18.89L13.04 18.92V9.97H17.03L12.03 4.97Z</Geometry>
                        <Geometry x:Key="SortAscending">M19 17H22L18 21L14 17H17V3H19M2 17H12V19H2M6 5V7H2V5M2 11H9V13H2V11Z</Geometry>
                        <Geometry x:Key="DescendingArrow">M7.03 13.92H11.03V5L13.04 4.97V13.92H17.03L12.03 18.92Z</Geometry>
                        <Geometry x:Key="SortDescending">M19 7H22L18 3L14 7H17V21H19M2 17H12V19H2M6 5V7H2V5M2 11H9V13H2V11Z</Geometry>
                        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
                    </ControlTemplate.Resources>
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 0"/>
                           
                            <!--SORT ICON-->
                            <Border Grid.Column="1" Margin="5 0" Visibility="Collapsed">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <Viewbox Height="24" VerticalAlignment="Center">
                                            <Path Data="{StaticResource SortAscending}" Fill="White" Height="24" />
                                        </Viewbox>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <Viewbox Height="24" VerticalAlignment="Center">
                                            <Path Data="{StaticResource SortDescending}" Fill="White" Height="24" />
                                        </Viewbox>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource HeaderMouseOverColor}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
    </Style>


    <Style TargetType="DataGridCell">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DataGridCell}">
                    <Grid Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 0"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="DataGridActionCellStyle" TargetType="DataGridCell">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DataGridCell}">
                    <Grid Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="{DynamicResource ScaffoldBackColor}"/>
        <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
        <Setter Property="RowBackground" Value="{DynamicResource ScaffoldBackColor}"/>
        <Setter Property="FontFamily" Value="Outfit"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="ColumnHeaderHeight" Value="30"/>
        <Setter Property="MinRowHeight" Value="20"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="GridLinesVisibility" Value="Horizontal"/>
        <Setter Property="HorizontalGridLinesBrush" Value="LightGray"/>
        <Setter Property="AlternatingRowBackground" Value="{DynamicResource DataGridAlternateRowBackColor}"/>
        <Setter Property="TextBlock.VerticalAlignment" Value="Center"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="CanUserReorderColumns" Value="False"/>
        <Setter Property="RowHeight" Value="25"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="VerticalAlignment" Value="Top"/>

    </Style>



</ResourceDictionary>